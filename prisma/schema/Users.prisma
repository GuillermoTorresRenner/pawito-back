model Users {
    userID         String    @id
    email          String    @unique
    password       String
    name           String
    surname        String
    region         String?
    commune        String?
    street         String?
    number         String?
    dpto           String?
    address        String?
    phone          String?
    avatar         String?
    role           Role      @default(USER)
    lastConnection DateTime?
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
    deletedAt      DateTime?
}

enum Role {
    ADMIN
    USER
}
